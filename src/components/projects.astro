---
import { PROJECTS } from "@/lib/data.ts";

const featured = PROJECTS.filter((p) => p.featured);
---

<section class="section" id="projects">
  <h2 class="section-label">Projects</h2>
  <div class="projects-grid">
    {featured.map((p) => (
      <div class="project-card project-card--wip">
        <h3>{p.title}</h3>
        <p>{p.description}</p>
        <div class="project-tech">
          {p.technologies.map((t) => (
            <span class="pill">{t}</span>
          ))}
        </div>
        {(p.url || p.github) && (
          <div class="project-links">
            {p.url && <a href={p.url} target="_blank" rel="noopener">View</a>}
            {p.github && <a href={p.github} target="_blank" rel="noopener">GitHub</a>}
          </div>
        )}
        <div class="project-wip-overlay">
          <span>Coming soon</span>
        </div>
      </div>
    ))}
  </div>
  <a href="/network" class="network-cta">
    <span class="network-cta-dot"></span>
    View live traffic
    <span class="network-cta-arrow">&rarr;</span>
  </a>
</section>
