{
  "name": "vault-site",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bunx alchemy dev",
    "dev:local": "bun run --watch src/index.ts",
    "deploy": "NODE_ENV=production bun run alchemy.run.ts",
    "destroy": "DESTROY=true bun run alchemy.run.ts",
    "ingest": "bun run scripts/ingest.ts",
    "check": "bun run --parallel --no-exit-on-error typecheck lint fmt:check",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "oxfmt .",
    "fmt:check": "oxfmt --check .",
    "typecheck": "tsgo --noEmit"
  },
  "dependencies": {
    "alchemy": "^0.85.1",
    "hono": "^4.7.0",
    "marked": "^17.0.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250805.0",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20260227.1",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "typescript": "^5.9.3"
  }
}
